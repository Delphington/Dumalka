<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/SS_SwitchThumbTrueSolid" />
            <size android:width="@dimen/FS_thumb_size_w" android:height="@dimen/FS_thumb_size_h" />
            <corners android:radius="@dimen/FS_thumb_size_r" />
            <stroke android:width="2dp" android:color="@color/SS_SwitchThumbTrueStroke" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/SS_SwitchThumbFalseSolid" />
            <size android:width="@dimen/FS_thumb_size_w" android:height="@dimen/FS_thumb_size_h" />
            <corners android:radius="@dimen/FS_thumb_size_r" />
            <stroke android:width="2dp" android:color="@color/SS_SwitchThumbFalseStroke" />
        </shape>

    </item>

</selector>