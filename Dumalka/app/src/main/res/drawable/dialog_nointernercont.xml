<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/DNI_BtnTurnOnTrueSolid" />
            <stroke android:width="2dp" android:color="@color/DNI_BtnTurnOnTrueStroke" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/DNI_BtnTurnOnFalseSolid" />
            <stroke android:width="2dp" android:color="@color/DNI_BtnTurnOnFalseStroke" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>