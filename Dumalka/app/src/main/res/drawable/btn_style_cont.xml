<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/MA_BtnTrueSolid" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/MA_BtnTrueStroke" />
            <corners android:radius="@dimen/_2sdp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/MA_BtnFalseSolid" />
            <stroke android:width="@dimen/_1sdp"
                android:color="@color/MA_BtnFalseStroke" />
            <corners android:radius="@dimen/_2sdp" />
        </shape>
    </item>

</selector>