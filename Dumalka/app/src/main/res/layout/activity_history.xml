<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/AH_Background"
    tools:context=".Main.History">

    <LinearLayout
        android:id="@+id/HLayoutFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/history_favorite_l"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingBottom="@dimen/_5sdp"
            android:src="@drawable/ic_baseline"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/Liner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingStart="@dimen/_3sdp"
            android:paddingBottom="@dimen/_5sdp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/gameNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/HA_Favorite"
                android:textColor="@color/AH_FavoriteHeaderText"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allQuestionsFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/AH_DescriptionText"
                android:text="@string/HA_Favorite_AllQ"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/AH_BackgroundListView">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>