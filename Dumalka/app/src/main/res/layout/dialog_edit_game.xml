<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/DEG_Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:minWidth="@dimen/_200sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="@dimen/_150sdp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:background="@drawable/editt_style_game"
            android:id="@+id/editTextDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:cursorVisible="true"
            android:drawableStart="@drawable/ic_edits"
            android:drawablePadding="@dimen/_8sdp"
            android:ems="10"
            android:textColorHint="@color/DEG_HintText"
            android:textColor="@color/DEG_EditText"
            android:padding="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            app:boxBackgroundMode="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <Button
                android:id="@+id/Btn_OnBack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:text="@string/DEG_BtnBackT"
                android:background="@drawable/btn_style_back_editgame"
                android:textAllCaps="false"
                android:textColor="@color/DEG_ButtonText"
                android:textSize="@dimen/_12ssp"/>

            <Button
                android:id="@+id/Btn_onSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:text="@string/DEG_BtnNewQT"
                android:background="@drawable/btn_style_save_editgame"
                android:textAllCaps="false"
                android:textColor="@color/DEG_ButtonText"
                android:textSize="@dimen/_12ssp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>